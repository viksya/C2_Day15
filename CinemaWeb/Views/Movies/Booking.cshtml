@model BookingModel

@if (Model.Bookings != null)
{
    <div class="card mb-3" style="max-width: 1200px;">
        <div class="row no-gutters">

            <div class="col-md-4"><img src="@Model.ActiveMovie.Pic" class="img-fluid" alt="..."></div>

            <div class="col-md-8 bg-dark">
                <div class="card-body @(ViewContext.RouteData.Values["action"].ToString() == "Booking" ? "active" : "")">
                    <a class="text-warning" asp-controller="Movies" asp-action="Movie" asp-route-id="@Model.ActiveMovie.Id">@Model.ActiveMovie.Title</a>
                    <p class="card-text, text-warning">@Model.ActiveMovie.Description</p>
                    <p class="card-text"><small class="text-muted">@Model.ActiveMovie.AvailableTime</small></p>
                </div>
            </div>
        </div>
    </div>
}

else
{
    <div class="alert alert-warning" role="alert">You don't have any active bookings!</div>
}