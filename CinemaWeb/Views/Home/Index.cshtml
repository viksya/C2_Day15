@model CategoryModel

<ul class="nav nav-pills mb-3">
    @foreach (var movie in Model.Movies)
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Movies" asp-action="Category" asp-route-id="@movie.Id">@movie.Title</a>
        </li>
    }
</ul>

<div class="p-3 mb-2 bg-dark text-warning">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active bg-warning" aria-current="page" asp-controller="Home" asp-action="Index">TOP</a>
        </li>
        <li class="nav-item dropdown">
            
                <a class="nav-link dropdown-toggle text-warning" data-bs-toggle="dropdown" asp-controller="Movies" asp-action="Category" role="button" aria-expanded="false">Categories</a>
                <ul class="dropdown-menu">
                    @foreach (var category in Model.Categories)
                    {
                        <li><a class="dropdown-item" asp-controller="Movies" asp-action="Category" asp-route-id="@category.Id">@category.Title</a></li>
                    }
                    </ul>
            </li>
    </ul>
</div>


@if (Model.Movies != null)
{
    @foreach (var movie in Model.Movies)
    {
        <div class="row">
            <div class="col-md-4 col-sm-12 mb-3">
                <div class="card bg-dark">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em"></text></svg>
                    <div class="card-body">
                        <a asp-controller="Movies" asp-action="Movie" asp-route-id="@movie.Id">@movie.Title</a>
                        <p class="card-text"><small class="text-muted">@movie.AvailableTime</small></p>
                    </div>
                </div>
            </div>
        </div>
    }
}