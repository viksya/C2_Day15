@model CategoryModel

<div class="p-3 mb-2 bg-dark text-warning">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active bg-warning" aria-current="page" asp-controller="Home" asp-action="Index">TOP</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-warning" data-bs-toggle="dropdown" asp-controller="Movies" asp-action="Category" role="button" aria-expanded="false">Categories</a>
            <ul class="dropdown-menu">
                @foreach (var category in Model.Movies)
                {
                    <li><a class="dropdown-item" asp-controller="Movies" asp-action="Category" asp-route-id="1">Thriller</a></li>
                    <li><a class="dropdown-item" asp-controller="Movies" asp-action="Category" asp-route-id="2">Comedy</a></li>
                    <li><a class="dropdown-item" asp-controller="Movies" asp-action="Category" asp-route-id="3">Action</a></li>
                    <li><a class="dropdown-item" asp-controller="Movies" asp-action="Category" asp-route-id="4">Fantasy</a></li>
                }
                </ul>
        </li>
    </ul>
</div>




<div class="row row-cols-md-2">


        @foreach (var movie in Model.Movies)
        {

            <div class="card bg-dark"><img src="@movie.Pic" class="card-img-right" alt="..."></div>
            <div class="card-body">
                <a class="text-warning" asp-controller="Movies" asp-action="Category" asp-route-id="@movie.Id">@movie.Title</a>
                <p class="card-text"><small class="text-muted">@movie.AvailableTime</small></p>
            </div>

        }
    </div>





